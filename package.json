{
  "name": "ts-webext-skeleton",
  "version": "1.0.0",
  "description": "Skeleton for building webextensions with TypeScript and SCSS (webpack).",
  "author": "Danny Hinshaw",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/DannyHinshaw/ts-webext-skeleton"
  },
  "scripts": {
    "start": "webpack --config webpack/webpack.dev.js --watch",
    "build": "webpack --config webpack/webpack.prod.js && yarn build:web-ext",
    "build:web-ext": "web-ext build --overwrite-dest -s dist",
    "test": "ts-node test.ts"
  },
  "dependencies": {
    "@types/chrome": "^0.0.75",
    "@types/node": "^10.12.3",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^1.0.1",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.4.4",
    "node-sass": "^4.10.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "ts-loader": "^5.3.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.6",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.1.4",
    "webpack-shell-plugin": "^0.5.0"
  },
  "browser": {
    "fs": false,
    "os": false,
    "path": false
  },
  "devDependencies": {
    "web-ext": "^2.9.2",
    "web-ext-types": "^3.0.0"
  }
}
